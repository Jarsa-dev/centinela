<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="centinel_quotation_form" model="ir.ui.view">
            <field name="name">Quotation</field>
            <field name="model">centinel.quotation</field>
            <field name="arch" type="xml">
                <form string="Quotation">
                    <sheet>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <group>
                            <group string="Customer information">
                                <field name="customer_id"/>
                                <field name="customer_type"/>
                                <field name="latitude"/>
                                <field name="longitude"/>
                                <field name="address"/>
                            </group>
                            <group string="Recruitment Information">
                                <field name="date"/>
                                <field name="state"/>
                                <field name="recruitment_zone"/>
                            </group>
                        </group>
                        <notebook>
                            <page string='Stand'> 
                                <field name='stand_ids' nolabel='1'/>
                            </page>
                            <!-- <page string="Services">
                                <field colspan="4" name="service_ids" nolabel="1"/>
                            </page>
                            <page string='Workconditions'>
                                <field colspan='4' name='work_condition_ids' nolabel='1'/>
                            </page>
                            <page string='Responsabilities'>
                                <field name='responsability_ids' nolabel='1'/>
                            </page> -->
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="centinel_quotation_tree" model="ir.ui.view">
            <field name="name">Quotation</field>
            <field name="model">centinel.quotation</field>
            <field name="arch" type="xml">
                <tree string="Quotation">
                    <field name="date"/>
                    <field name="state"/>
                    <field name="customer_id"/>
                    <field name="customer_type"/>
                    <field name="latitude"/>
                    <field name="longitude"/>
                    <field name="address"/>
                    <field name="recruitment_zone"/>
                </tree>
            </field>
        </record>
        <record id="action_centinel_quotation" model="ir.actions.act_window">
            <field name="name">Quotation</field>
            <field name="res_model">centinel.quotation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>