<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="centinel_supervisor_form" model="ir.ui.view">
            <field name="name">Supervisor</field>
            <field name="model">centinel.supervisor</field>
            <field name="arch" type="xml">
                <form string="Supervisor">
                    <sheet>
                        <group>
                            <group>
                                <field name='customer_id'/>
                            </group>
                            <group>
                                <field name='quotation_id' domain="([('customer_id', '=', customer_id)])"/>
                            </group>
                            <separator col='4' style="text-align: center;" string="--------------------------------"/>
                            <group colspan='4' col='4'>
                                <field name='customer_type'/>
                                <field name='date'/>
                                <field name='state'/>
                                <field name='location'/>
                                <field name='latitude'/>
                                <field name='longitude'/>
                                <field name='address'/>
                                <field name='recruitment_zone'/>
                            </group>
                        </group>
                            <notebook>
                                <page string='Vacancies'>
                                    <field name='vacancy_ids' nolabel='1'/>
                                </page>
                            </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="centinel_supervisor_tree" model="ir.ui.view">
            <field name="name">Supervisor</field>
            <field name="model">centinel.supervisor</field>
            <field name="arch" type="xml">
                <tree string="Quotations">
                    <field name='customer_id'/>
                    <field name='quotation_id'/>
                    <field name='date'/>
                    <field name='state'/>
                    <field name='customer_type'/>
                    <field name='location'/>
                    <field name='latitude'/>
                    <field name='longitude'/>
                    <field name='address'/>
                    <field name='recruitment_zone'/>
                </tree>
            </field>
        </record>
        <record id="action_centinel_supervisor" model="ir.actions.act_window">
            <field name="name">Supervisor</field>
            <field name="res_model">centinel.supervisor</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>