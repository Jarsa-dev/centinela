<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="centinel_workcondition_tree" model="ir.ui.view">
            <field name="name">Workcondition</field>
            <field name="model">centinel.work.condition</field>
            <field name="arch" type="xml">
                <tree string="Workcondition" editable='top'>
                    <field name="description"/>
                    <field name="with_partners"/>
                    <field name="with_customers"/>
                    <field name="frecuent_problems"/>
                    <field name="negative_experience"/>
                    <field name='plant_risk'/>
                    <field name='crimen_risk'/>
                    <field name='resources_risk'/>
                </tree>
            </field>
        </record>
        <record id="action_centinel_workcondition" model="ir.actions.act_window">
            <field name="name">Work condition</field>
            <field name="res_model">centinel.work.condition</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
